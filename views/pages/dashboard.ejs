<!DOCTYPE html>
<html>
<title>PHOTOVIEWER-APP</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/cosmo/bootstrap.min.css">
<link rel="stylesheet" href="css/style.css">
<style>
 body,
 h1,
 h2,
 h3,
 h4,
 h5,
 h6 {
   font-family: "Raleway", sans-serif
 }
</style>

<body class="w3-light-grey w3-content" style="max-width:1600px">

 <!-- Sidebar/menu -->
 <nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar">
   <br>
   <div class="w3-container">
     <a href="#" onclick="w3_close()" class="w3-hide-large w3-right w3-jumbo w3-padding w3-hover-grey" title="close menu">
       <i class="fa fa-remove"></i>
     </a>
     <img src="https://www.w3schools.com/w3images/avatar_g2.jpg" style="width:45%;" class="w3-round">
     <br>
     <br>
     <h4>
       <b>PHOTOVIEWER</b>
     </h4>
   </div>
   <div class="w3-bar-block">
     <a href="#instagram" onclick="w3_close()" class="w3-bar-item w3-button w3-padding w3-text-teal">
       <i class="fa fa-th-large fa-fw w3-margin-right"></i>INSTAGRAM</a>
     <a href="#facebook" onclick="w3_close()" class="w3-bar-item w3-button w3-padding w3-text-teal">
       <i class="fa fa-facebook-official fa-fw w3-margin-right"></i>FACEBOOK</a>
     <a href="#about" onclick="w3_close()" class="w3-bar-item w3-button w3-padding">
       <i class="fa fa-user fa-fw w3-margin-right"></i>ABOUT</a>
   </div>


   <form name="" method="GET" action="/logout">
     <div class="container">
       <button> Logout</button>

     </div>
   </form>

 </nav>

 <!-- Overlay effect when opening sidebar on small screens -->
 <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu"
   id="myOverlay"></div>

 <!-- !PAGE CONTENT! -->
 <div class="w3-main" style="margin-left:300px">

   <!-- Header -->
   <header id="instagram">
     <a href="#">
       <img src="https://www.w3schools.com/w3images/avatar_g2.jpg" style="width:65px;" class="w3-circle w3-right w3-margin w3-hide-large w3-hover-opacity">
     </a>
     <span class="w3-button w3-hide-large w3-xxlarge w3-hover-text-grey" onclick="w3_open()">
       <i class="fa fa-bars"></i>
     </span>
     <div class="w3-container">
       <h1>
         <b>PHOTOVIEWER</b>
       </h1>
     </div>
   </header>

   <!-- Instagram Photo Grid-->
   <div>
     <nav class="navbar navbar-inverse">
       <div class="container-fluid">
         <div class="navbar-header">
           <a href="#instagram" class="navbar-brand">
             <span class="glyphicon glyphicon-picture"></span>
             Instagram Photos
           </a>
         </div>
       </div>
     </nav>
   </div>

   <main>
     <div class="row">
       <% instagram.forEach(function(insta) { %>
         <div class="instagram-pic col-sm-3">
           <a href="<%= insta.link %>" target="_blank">
             <img src="<%= insta.images.standard_resolution.url %>" class="img-responsive">
           </a>
           <div class="instagram-bar">
             <div class="likes">
               <span class="glyphicon glyphicon-heart"></span>
               <%= insta.likes.count %>
             </div>
             <div class="comments">
               <span class="glyphicon glyphicon-comment"></span>
               <%= insta.comments.count %>
             </div>
           </div>
         </div>
         <% }); %>
     </div>
   </main>

   <!-- Pagination -->
   <div class="w3-center w3-padding-32">
     <div class="w3-bar">
       <a href="#" class="w3-bar-item w3-button w3-hover-black">«</a>
       <a href="#" class="w3-bar-item w3-black w3-button">1</a>
